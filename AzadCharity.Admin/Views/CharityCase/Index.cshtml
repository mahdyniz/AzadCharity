@using AzadCharity.Models.Models
@model IEnumerable<CharityCase>

@{
    ViewData["Title"] = "Charity Cases";
}

<h2>Charity Cases</h2>

<a asp-action="Create" class="btn btn-primary">Add New Charity Case</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Amount Needed</th>
            <th>Amount Collected</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.AmountNeeded</td>
                <td>@item.AmountCollected</td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
